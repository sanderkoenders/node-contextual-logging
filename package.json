{
  "name": "node-contextual-logging",
  "version": "0.1.0",
  "description": "A simple project to demonstrate contextual logging and tracing with express and axios",
  "main": "index.ts",
  "repository": "https://github.com/sanderkoenders/node-contextual-logging",
  "author": "Sander Koenders <sanderkoenders@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "serve": "NODE_ENV=development nodemon --exec 'ts-node' src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "jest --watchAll",
    "test:ci": "jest --ci",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src --ext .ts"
  },
  "dependencies": {
    "express": "^4.18.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "29.1.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "5.39.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "jest": "29.1.2",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./*.{js,ts}": [
      "npx prettier --write",
      "npm run lint"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
